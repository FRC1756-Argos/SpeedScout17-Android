<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:mstb="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="dkt01.speedscout17.dkt01.speedscout17.EntryActivity">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Team Number:"/>
            <EditText
                android:id="@+id/entry_team_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:inputType="number"
                android:maxLength="4"
                android:hint="####"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Team Color:"/>
            <ToggleButton
                android:id="@+id/entry_team_color"
                android:onClick="colorClick"
                android:background="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textOff="Red"
                android:textOn="Blue"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Match Number:"/>
            <EditText
                android:id="@+id/entry_match_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:inputType="number"
                android:maxLength="3"
                android:hint="###"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="26dp"
            android:text="Autonomous:"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Crossed Baseline:"/>
            <Spinner
                android:id="@+id/entry_auto_baseline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:entries="@array/auto_baseline_array"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <Button
                android:id="@+id/entry_auto_low_boiler_inc"
                android:onClick="autoLowIncClick"
                android:layout_width="115dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:text="Low Boiler"/>
            <Button
                android:id="@+id/entry_auto_low_boiler_dec"
                android:onClick="autoLowDecClick"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:text="0"/>
            <Button
                android:id="@+id/entry_auto_high_boiler_inc"
                android:onClick="autoHighIncClick"
                android:layout_width="115dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:text="High Boiler"/>
            <Button
                android:id="@+id/entry_auto_high_boiler_dec"
                android:onClick="autoHighDecClick"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Gear Placed on Airship:"/>
            <Spinner
                android:id="@+id/entry_auto_gear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:entries="@array/auto_gear_array"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="26dp"
            android:text="Teleop:"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <Button
                android:id="@+id/entry_tele_low_boiler_inc"
                android:onClick="teleLowIncClick"
                android:layout_width="115dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:text="Low Boiler"/>
            <Button
                android:id="@+id/entry_tele_low_boiler_dec"
                android:onClick="teleLowDecClick"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:text="0"/>
            <Button
                android:id="@+id/entry_tele_high_boiler_inc"
                android:onClick="teleHighIncClick"
                android:layout_width="115dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:text="High Boiler"/>
            <Button
                android:id="@+id/entry_tele_high_boiler_dec"
                android:onClick="teleHighDecClick"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <Button
                android:id="@+id/entry_tele_gear_inc"
                android:onClick="teleGearIncClick"
                android:layout_width="115dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:text="Gear"/>
            <Button
                android:id="@+id/entry_tele_gear_dec"
                android:onClick="teleGearDecClick"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Climbed Airship:"/>
            <Spinner
                android:id="@+id/entry_tele_airship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:entries="@array/tele_airship_array"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
